{
    "name": "intellect-mesh",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.black-formatter"
            ]
        }
    },
    "runArgs": [
        "--userns=keep-id"
    ],
    "containerEnv": {
        "HOME": "/home/ubuntu",
        "WAYLAND_DISPLAY": "/run/user/1000/wayland-0",
        "XDG_RUNTIME_DIR": "/run/user/1000",
        "MOZ_ENABLE_WAYLAND": "1"
    },
    "mounts": [
        {
            "source": "/run/user/1000/wayland-0",
            "target": "/run/user/1000/wayland-0",
            "type": "bind"
        }
    ],
    "remoteUser": "ubuntu"
}